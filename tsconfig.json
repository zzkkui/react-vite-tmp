{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "node",
      "vite/client",
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "useDefineForClassFields": true,
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "types/*": [
        "./types/*"
      ]
    },
    // "typeRoots": [
    //   "types/*.d.ts",
    //   "node_modules/@types"
    // ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "public"
  ],
  "include": [
    "./src/**/*",
    "./types/**/*",
    "./build/**/*",
    "./mock/**/*",
  ]
}
